{
  "compilerOptions": {
      "declaration": true,
      "declarationDir": "dist/types",
      "esModuleInterop": true,
      "outDir": "./dist",
      "jsx": "react",
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node"],
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
